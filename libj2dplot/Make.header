# Useful directories

JX_ROOT := ..

J2DPLOTDIR := ./code
JCOREDIR   := ${JX_ROOT}/include/jcore
JEXPRDIR   := ${JX_ROOT}/include/jexpr
JXDIR      := ${JX_ROOT}/include/jx

# Directories to search for header files

SEARCHDIRS := -I${J2DPLOTDIR} \
              -I${JCOREDIR} \
              -I${JEXPRDIR} \
              -I${JXDIR}

# makemake variables

include ${JX_ROOT}/include/make/jx_constants
include ${JX_ROOT}/include/make/j2dplot_constants
include ${JX_ROOT}/include/make/jx_config

DEPENDFLAGS := ${J_COMPILER_DEPEND_FLAGS} \
               ${J_COMPILE_DEBUG} ${J_BUILD_SHARED_LIB} \
               ${SEARCHDIRS}

# make variables

LOADLIBES := 
LDFLAGS   := 

#####

LIB_NAME_ROOT := libj2dplot-${J2DPLOT_LIB_VERSION}
include ${JX_ROOT}/include/make/default_lib_target

.PHONY : Makefiles
Makefiles:
	@cd test; makemake; ${MAKE} Makefiles

#
# remove binaries
#

.PHONY : tidy
tidy::
	@cd test; ${MAKE} tidy

.PHONY : clean
clean::
	@cd test; ${MAKE} clean

