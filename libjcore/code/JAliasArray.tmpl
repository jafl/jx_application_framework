void
JAliasArray<T>::SetSortOrder
	(
	const JListT::SortOrder order
	)
{
	itsIndexArray->SetSortOrder(order);
	itsIndexArray->Sort();
}

/******************************************************************************
 SearchSorted

	Returns true if the specified target is found.

	"which" specifies what to return if more than one element matches
	the given target.

 ******************************************************************************/

template <class T>
bool
JAliasArray<T>::SearchSorted
	(
	const T&					target,
	const JListT::SearchReturn	which,
	JIndex*						index
	)
	const
{
	bool found;
	*index = SearchSortedOTI(target, which, &found);
	if (!found)
	{
		*index = 0;
	}
	return found;
}

/******************************************************************************
 SearchSortedOTI (virtual)

	Returns index where the element is or where it should be inserted in
	order to keep the list sorted.  If there is an element that matches the
	given one, *found is set to true.

	"which" specifies what to return if more than one element matches
	the given target.

 ******************************************************************************/

template <class T>
JIndex
JAliasArray<T>::SearchSortedOTI
	(
	const T&					target,
	const JListT::SearchReturn	which,
	bool*						found
	)
	const
{
	assert( itsData != nullptr );

	JAliasArray<T>* self = const_cast<JAliasArray<T>*>(this);

	self->InstallCompareWrapper(&target);
	const JIndex i = itsIndexArray->SearchSortedOTI(0, which, found);
	self->InstallCompareWrapper(nullptr);
	return i;
}

/******************************************************************************
 Receive (virtual protected)

	Stay synched with itsData.

 ******************************************************************************/

#define ADJUST_INDEX(m) \
	const JSize count = itsIndexArray->GetElementCount(); \
	JIndex* data      = const_cast<JIndex*>(itsIndexArray->GetCArray()); \
	for (JIndex _i=0; _i<count; _i++) \
	{ \
		m->AdjustIndex(data + _i); \
	}

template <class T>
void
JAliasArray<T>::Receive
	(
	JBroadcaster*	sender,
	const Message&	message
	)
{
	if (sender == itsData && message.Is(JListT::kElementsInserted))
	{
		const JListT::ElementsInserted* m =
			dynamic_cast<const JListT::ElementsInserted*>(&message);
		assert( m != nullptr );
		ADJUST_INDEX(m);

		for (JIndex i = m->GetFirstIndex(); i <= m->GetLastIndex(); i++)
		{
			itsIndexArray->InsertSorted(i);
		}

		SetElementCount(GetElementCount() + m->GetCount());
	}
	else if (sender == itsData && message.Is(JListT::kElementsRemoved))
	{
		const JListT::ElementsRemoved* m =
			dynamic_cast<const JListT::ElementsRemoved*>(&message);
		assert( m != nullptr );

		const JSize count = itsIndexArray->GetElementCount();
		for (JIndex i=count; i>=1; i--)
		{
			JIndex index = itsIndexArray->GetElement(i);
			if (m->AdjustIndex(&index))
			{
				itsIndexArray->SetElement(i, index);
			}
			else
			{
				itsIndexArray->RemoveElement(i);
			}
		}

		SetElementCount(GetElementCount() - m->GetCount());
	}
	else if (sender == itsData && message.Is(JListT::kElementMoved))
	{
		const JListT::ElementMoved* m =
			dynamic_cast<const JListT::ElementMoved*>(&message);
		assert( m != nullptr );
		ADJUST_INDEX(m);
	}
	else if (sender == itsData && message.Is(JListT::kElementsSwapped))
	{
		const JListT::ElementsSwapped* m =
			dynamic_cast<const JListT::ElementsSwapped*>(&message);
		assert( m != nullptr );
		ADJUST_INDEX(m);
	}
	else if (sender == itsData && message.Is(JListT::kElementsChanged))
	{
		// Sort() would be O(N log N).  This method is O(N) + O(log N) = O(N).

		const JListT::ElementsChanged* m =
			dynamic_cast<const JListT::ElementsChanged*>(&message);
		assert( m != nullptr );

		for (JIndex j=m->GetFirstIndex(); j<=m->GetLastIndex(); j++)
		{
			const JSize count = itsIndexArray->GetElementCount();
			for (JIndex i=1; i<=count; i++)
			{
				if (itsIndexArray->GetElement(i) == j)
				{
					itsIndexArray->RemoveElement(i);
					break;
				}
			}

			itsIndexArray->InsertSorted(j);
		}
	}
	else if (sender == itsData && message.Is(JListT::kSorted))
	{
		itsIndexArray->Sort();
	}

	else
	{
		JCollection::Receive(sender, message);
	}
}

#undef ADJUST_INDEX

/******************************************************************************
 ReceiveGoingAway (virtual protected)

 ******************************************************************************/

template <class T>
void
JAliasArray<T>::ReceiveGoingAway
	(
	JBroadcaster* sender
	)
{
	if (sender == itsData)
	{
		itsData = nullptr;
	}
	else
	{
		JCollection::ReceiveGoingAway(sender);
	}
}

#endif
