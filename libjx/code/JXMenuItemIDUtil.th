		#define CmdToIndexFn ____
		#define MenuVar      ____
		#define CmdType      ____
		#define CmdIDList    ____
		#include "jx-af/jx/JXMenuItemIDUtil.th"
		#undef ClassName
		#undef IndexToCmdFn
		#undef CmdToIndexFn
		#undef MenuVar
		#undef CmdType
