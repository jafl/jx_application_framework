/******************************************************************************
 IndexToCmdFn

 ******************************************************************************/

bool
ClassName::IndexToCmdFn
	(
	const JIndex	index,
	CmdIndex*		cmd
	)
	const
{
	const JString* id;
	if (MenuVar->GetItemID(index, &id))
	{
		for (const auto& info : CmdIDList)
		{
			if (info.id == *id)
			{
				*cmd = info.cmd;
				return true;
			}
		}
	}

	*cmd = kSeparatorCmd;
	return false;
}

/******************************************************************************
 CmdToIndexFn

 ******************************************************************************/

bool
ClassName::CmdToIndexFn
	(
	const CmdIndex	cmd,
	JIndex*			index
	)
	const
{
	*index = 0;

	const JUtf8Byte* cmdID = nullptr;
	for (const auto& info : CmdIDList)
	{
		if (info.cmd == cmd)
		{
			cmdID = info.id;
			break;
		}
	}

	if (cmdID == nullptr)
	{
		return false;
	}
	else
	{
		return MenuVar->ItemIDToIndex(JString(cmdID, JString::kNoCopy), index);
	}
}
