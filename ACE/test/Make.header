# To use this file, first run "makemake" and then run "make".
# (makemake is part of the JX distribution)

JX_ROOT := ../..

# Directories to search for header files

SEARCHDIRS := -I./code \
              -I${JX_ROOT}/include/jcore

# other constants

PROG_LIST := client server evt_client evt_server

# makemake variables

include ${JX_INCLUDE_ROOT}/jx-af/make/jx_config

DEPENDFLAGS := ${J_COMPILER_DEPEND_FLAGS} \
               -g ${SEARCHDIRS}

# library dependencies

LOADLIBES := ${J_ACE_LIBS} ${J_GCC_LIBS}
LIB_DEPS  := ${JX_LIB_ROOT}/libjcore.a

# make variables

LDFLAGS :=

#####

include ${JX_INCLUDE_ROOT}/jx-af/make/app_targets

#
# required libraries
#

.PHONY : libs
libs::
	@cd ${JX_ROOT}/libjcore; ${MAKE}

.PHONY : touch
touch::
	@cd ${JX_ROOT}/libjcore; ${MAKE} TOUCHSTRING=${TOUCHSTRING} touch
