# To use this file, first run "makemake" and then run "make".
# (makemake is part of the JX distribution)

# Useful directories

JX_ROOT := ../..

CODEDIR   := ./code
JCOREDIR  := ${JX_ROOT}/include/jcore
JEXPRDIR  := ${JX_ROOT}/include/jexpr
REFLEXDIR := ${JX_ROOT}/include/reflex

JLIBDIR     := ${JX_ROOT}/lib
JCORELIBDIR := ${JX_ROOT}/libjcore
JEXPRLIBDIR := ${JX_ROOT}/libjexpr

# Directories to search for header files

SEARCHDIRS := -I${CODEDIR} \
              -I${JCOREDIR} \
              -I${JEXPRDIR} \
              -I${REFLEXDIR}

# makemake variables

include ${JX_ROOT}/include/make/jx_constants
include ${JX_ROOT}/include/make/jexpr_constants
include ${JX_ROOT}/include/make/jx_config

DEPENDFLAGS := ${J_COMPILER_DEPEND_FLAGS} \
               -g ${SEARCHDIRS}

# library dependencies

ifdef J_BUILD_SHARED_LIB
  LIB_DEPS := ${JLIBDIR}/libjexpr-${JEXPR_LIB_VERSION}.${J_SHARED_LIB_SUFFIX} \
              ${JLIBDIR}/libjx-${JX_LIB_VERSION}.${J_SHARED_LIB_SUFFIX} \
              ${JLIBDIR}/libjcore-${JX_LIB_VERSION}.${J_SHARED_LIB_SUFFIX}
else
  LIB_DEPS := ${JLIBDIR}/libjexpr-${JEXPR_LIB_VERSION}.a \
              ${JLIBDIR}/libjcore-${JX_LIB_VERSION}.a
endif

# make variables

ifdef J_BUILD_SHARED_LIB
  LOADLIBES := ${JLIBDIR}/libjexpr-${JEXPR_LIB_VERSION}.${J_SHARED_LIB_SUFFIX} \
               -lreflex ${J_STD_LIBS}
else
  LOADLIBES := -lreflex ${J_IMG_LIBS} ${J_ACE_LIBS} ${J_GCC_LIBS}
endif

LDFLAGS :=

# tests

TESTS := \
      test_JVariableList test_JUserInputFunction \
      test_JExprParser test_JExprEditor

#####

.PHONY : default
default:
	@cd ..; ${MAKE}

.PHONY : Makefiles
Makefiles:

.PHONY : test
test: ${TESTS}
	$(call run_tests,${TESTS})

.PHONY : touch
touch::
	@cd ..; ${MAKE} TOUCHSTRING=${TOUCHSTRING} touch
