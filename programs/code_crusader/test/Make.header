# To use this file, first run "makemake" and then run "make".
# (makemake is part of the JX distribution)

# Useful directories

JX_ROOT := ../../..

CODEDIR    := ./code
JCCCODEDIR := ../code
JCOREDIR   := ${JX_ROOT}/include/jcore
JXDIR      := ${JX_ROOT}/include/jx

JLIBDIR     := ${JX_ROOT}/lib
JCORELIBDIR := ${JX_ROOT}/libjcore
JXLIBDIR    := ${JX_ROOT}/libjx

# Directories to search for header files

SEARCHDIRS := -I${CODEDIR} \
              -I${JCCCODEDIR} \
              -I${JCOREDIR} \
              -I${JXDIR}

# makemake variables

include ${JX_ROOT}/include/make/jx_constants
include ${JX_ROOT}/include/make/jx_config

DEPENDFLAGS := ${J_COMPILER_DEPEND_FLAGS} \
               -g ${SEARCHDIRS} -DCODE_CRUSADER \
               -DCODE_CRUSADER_UNIT_TEST

# make variables

CPPFLAGS  += -Wno-sign-compare
LOADLIBES := -lreflex ${J_STD_LIBS}
LDFLAGS   := 

# tests

TESTS := \
      test_BourneShellStyler test_CStyler test_CSharpStyler test_CShellStyler \
      test_DStyler test_GoStyler test_EiffelStyler test_HTMLStyler test_INIStyler \
      test_JavaStyler test_JavaScriptStyler test_PerlStyler test_PropertiesStyler \
      test_PythonStyler \
      test_CTreeScanner test_DTreeScanner test_GoTreeScanner \
      test_JavaTreeScanner test_PHPTreeScanner

include ../make_reflex_target

#####

.PHONY : default
default:
	@cd ..; ${MAKE}

.PHONY : Makefiles
Makefiles:

.PHONY : test
test:
	${MAKE} reset test_binaries
	$(call run_tests,${TESTS})
	${MAKE} reset

.PHONY : test_binaries
test_binaries: ${TESTS}

.PHONY : reset
reset:
	@cd ..; ${MAKE} TOUCHSTRING=CODE_CRUSADER_UNIT_TEST touch

.PHONY : touch
touch::
	@cd ..; ${MAKE} TOUCHSTRING=${TOUCHSTRING} touch
