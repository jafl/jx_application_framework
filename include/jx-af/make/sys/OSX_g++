# configuration for compiling with clang

include ${MAKE_INCLUDE}/jx_constants

#
# Adjustable parameters
#

# X11 libraries & headers - XQuartz

J_X11_LIB_DIR := -L/usr/X11/lib

# Optimization level for debugging

J_DEBUG_OPTIMIZATION_LEVEL := 0

# This command is used to strip debugging info but not the symbol table.

J_STRIP_DEBUG := strip -S

# Adjust these until everything compiles

J_RAW_SYSTEM_STUFF := \
  -D_J_OSX -DSIZEOF_LONG=8 -DSIZEOF_INT=4 -DSIZEOF_LONGLONG=8 \
  -DU_CHARSET_IS_UTF8=1 \
  -D_J_LLDB_HAS_SBVALUE_GETSUMMARY \
  -D_J_HAS_SYSCTL -D_XFT_NO_COMPAT_ -I/usr/X11/include/freetype2

SEARCHDIRS += -I/usr/X11/include

J_HAS_SYSCTL := yes

#
# Nothing below this line should ever need to be changed.
#

ifdef TRAVIS
  PKG_CONFIG_PATH := /usr/local/opt/icu4c/lib/pkgconfig
endif

# makemake variables

LINKER := clang++

# make variables

CC       := clang
CXX      := clang++
CPPFLAGS  = ${DEPENDFLAGS} ${J_OPTIMIZE_LEVEL} \
            ${shell PKG_CONFIG_PATH=${PKG_CONFIG_PATH} \
              pkg-config --cflags icu-i18n libpcre}
CFLAGS    =
CXXFLAGS  = -std=c++17 --verbose

# libraries to link

J_GCC_LIBS  := ${shell PKG_CONFIG_PATH=${PKG_CONFIG_PATH} \
                 pkg-config --libs icu-i18n libpcre} \
               -lstdc++ -lm -lc
J_ACE_LIBS  := -lACE
J_X11_LIBS  := ${J_X11_LIB_DIR} -lXext -lXft -lfontconfig -lXpm -lX11

# generate coverage part 1: ensure that all uses of J_GCC_LIBS are consistent

ifdef TRAVIS
  J_RUN_GCOV := 1
  J_GCC_LIBS += -coverage
endif

# lldb

J_LLDB_LIBS          := -L/usr/local/opt/llvm/lib -llldb
J_POST_LINK_LLDB_CMD := install_name_tool -add_rpath /Library/Developer/CommandLineTools/Library/PrivateFrameworks

# modify settings based on OS, compiler, etc.

include ${MAKE_INCLUDE}/jx_config_common

# libpng is part of X11

J_IMG_LIBS := ${J_X11_LIB_DIR} ${J_IMG_LIBS}
J_STD_LIBS := ${J_X11_LIB_DIR} ${J_STD_LIBS}

# generate coverage part 2: update compiler flags after the variable is defined

ifdef TRAVIS
  J_COMPILER_DEPEND_FLAGS += -coverage
endif
